   // Input the second temperatuire reading
   cout << "Enter the second temperature reading (Degrees):";
   cin >> temp2;
   
   if (temp2 - temp1 > 50) {
   // Check the increase in temperature if (temp1 - temp2 > 50) 
   cout << "Reduce  fryer heat before taking the third reading." << endl;
   
   cout << "Enter the third temperature reading (Degrees): "<< endl;
